{
  "setupTasks": ["pnpm install"],
  "tasks": {
    "install-dependencies": {
      "name": "Install dependencies",
      "command": "pnpm install"
    },
    "dev-app": {
      "name": "Run dev server with rspack",
      "command": "pnpm run dev",
      "runAtStart": true
    },
    "dev-app:webpack": {
      "name": "Run dev server with webapck",
      "command": "pnpm run dev:webpack"
    },
    "build-app": {
      "name": "Build application with rspack",
      "command": "pnpm run build"
    },
    "build-app:webpack": {
      "name": "Build application with webpack",
      "command": "pnpm run build:webpack"
    }
  }
}
