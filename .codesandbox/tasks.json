{
  "setupTasks": ["pnpm install"],
  "tasks": {
    "install-dependencies": {
      "name": "Install Dependencies",
      "command": "pnpm install"
    },
    "start-app": {
      "name": "Run Dev Server",
      "command": "pnpm run dev",
      "runAtStart": true
    },
    "build-app": {
      "name": "Build Application",
      "command": "pnpm run build"
    }
  }
}
